<!-- HTML5 Doctype Declaration -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Character encoding and viewport for responsiveness -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Page title -->
    <title>Home - Portfolio</title>

    <!-- Stylesheet link -->
    <link rel="stylesheet" href="/output.css"> 

    <!-- Inline custom styles for underline animation in navigation -->
    <style>
        /* Custom styles for navigation link hover underline animation */
        nav a {
            position: relative;
            transition: all 0.3s ease-in-out;
        }

        nav a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: #FFF;
            transition: width 0.3s ease-in-out;
        }

        nav a:hover::after {
            width: 100%;
        }
    </style>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">

<!-- Navbar Section -->
<header class="bg-gray-800 fixed top-0 w-full z-50 shadow-lg">
